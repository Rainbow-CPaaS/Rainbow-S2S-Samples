<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>bin</id>
    <formats>
        <format>jar</format>
        <format>tgz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>JavaS2SBotSample</outputDirectory>
            <includes>
                <include>README*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../config</directory>
            <outputDirectory>JavaS2SBotSample/config</outputDirectory>
            <includes>
                <include>*.json</include>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../bin</directory>
            <outputDirectory>JavaS2SBotSample</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>        
        <fileSet>
            <directory>${project.basedir}/rainbow_authent_portal/docs</directory>
            <outputDirectory>JavaS2SBotSample/docs/auth</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/s2s/docs</directory>
            <outputDirectory>JavaS2SBotSample/docs/s2s</outputDirectory>
        </fileSet>
    </fileSets>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.ale.rainbow.s2s:s2s-client-s2s</include>
                <include>com.ale.rainbow.s2s:s2s-client-auth</include>
                <include>com.ale.rainbow.s2s:echo-bot</include>
            </includes>
            <binaries>
                <outputDirectory>JavaS2SBotSample</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
